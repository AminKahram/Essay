@*@model IEnumerable<Article.DomainModel.Query.Article.ArticleListItemModel>*@
@model IEnumerable<Article.DomainModel.Query.Article.ArticleListItemForAuthorModel>
<table class="table table-bordered table-hover table-responsive table-striped table-sm">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ArticleID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArticleSubject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SmallDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AuthorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PublicationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArticlImageName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ArticleID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArticleSubject)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SmallDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AuthorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PublicationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArticlImageName)
            </td>
            <td>
                <span class="btn btn-danger btnDeleteArticle" data-id="@item.ArticleID" data-img-name="@item.ArticlImageName" data-action="@Url.Action("Delete","ArticleManagement")" data-author-id="@item.AuthorID" data-action-serach="@Url.Action("GetArticles","AuthorManagement")">Delete</span>
                <span class="btn btn-info btnEdit" data-id="@item.ArticleID" data-action="@Url.Action("Update","ArticleManagement")" data-target="#dvContent" data-target-Modal="#AuthorAddEditModal">Edit</span>
            </td>
        </tr>
}
    </tbody>
</table>
<span class="btn btn-danger btnCloseGrid" data-show-target=".AuthorGrid" data-hide-target=".ArticleGrid">Close</span>