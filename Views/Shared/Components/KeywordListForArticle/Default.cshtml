@model IEnumerable<Article.DomainModel.Query.Keyword.KeywordListItemForArticleModel>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.KeywordID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KeywordName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArticleID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.KeywordID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KeywordName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArticleID)
            </td>
            <td>
                <span class="btn btn-danger btnDeleteKeyword" data-action="@Url.Action("DeleteKeywordArticleFromArticle","ArticleManagement")" data-article-id="@item.ArticleID" data-keyword-id="@item.KeywordID">Delete</span>
            </td>
        </tr>
}
    </tbody>
</table>
<span class="btn btn-danger btnCloseGrid" data-show-target=".ArticleGrid" data-hide-target=".KeywordGrid">Close</span>