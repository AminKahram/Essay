@model IEnumerable<Article.DomainModel.Query.Article.ArticleListItemModel>
<table class="table table-bordered table-hover table-responsive table-striped table-sm">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ArticleID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArticleSubject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AuthorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SmallDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PublicationDate)
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ArticleID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ArticleSubject)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AuthorName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SmallDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Size)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PublicationDate.Date)
                </td>
                <td>
                    <span class="btn btn-danger btnDelete" data-id="@item.ArticleID" data-img-name="@item.ArticlImageName" data-action="@Url.Action("Delete","ArticleManagement")">Delete</span>
                    <span class="btn btn-info btnEdit" data-id="@item.ArticleID" data-action="@Url.Action("Update","ArticleManagement")" data-target="#dvContent" data-target-Modal="#AddEditModal">Edit</span>
                    <span class="btn btn-primary btnKeywords" data-id="@item.ArticleID" data-action="@Url.Action("GetKeywords","ArticleManagement")" data-target=".KeywordGrid" data-hide-target=".ArticleGrid">Keywords</span>
                    <span class="btn btn-primary btnAuthors" data-id="@item.ArticleID" data-action="@Url.Action("GetAuthors","ArticleManagement")" data-target=".AuthorGrid" data-hide-target=".ArticleGrid">Authors</span>
                </td>

            </tr>
        }
    </tbody>
</table>
