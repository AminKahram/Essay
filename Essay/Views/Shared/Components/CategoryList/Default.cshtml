@model IEnumerable<Article.DomainModel.Query.Category.CategoryListItemModel>
<table class="table  table-hover table-responsive table-striped table-sm">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Articles)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Articles)
            </td>
            <td>
                <span class="btn btn-danger btnDelete" data-action="@Url.Action("Delete","CategoryManagement")" data-id="@item.CategoryID">Delete</span>
                <span class="btn btn-info btnEdit" data-id="@item.CategoryID" data-action="@Url.Action("Update","CategoryManagement")" data-target="#dvContent" data-target-Modal="#CategoryAddEditModal">Edit</span>
                <span class="btn btn-primary btnKeywords btnKeywordsOnDelete" data-id="@item.CategoryID" data-action="@Url.Action("GetKeywords","CategoryManagement")" data-target=".KeywordGrid" data-hide-target="#dvGrid">Keywords</span>
            </td>
        </tr>
}
    </tbody>
</table>
