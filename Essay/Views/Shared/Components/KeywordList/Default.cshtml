@model IEnumerable<Article.DomainModel.Query.Keyword.KeywordListItemModel>

<table class="table table-hover table-responsive table-striped table-sm">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.KeywordID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KeywordName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.KeywordID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KeywordName)
            </td>
            <td>
                <span class="btn btn-danger btnDelete" data-action="@Url.Action("Delete","KeywordManagement")" data-id="@item.KeywordID">Delete</span>
                <span class="btn btn-info btnEdit" data-id="@item.KeywordID" data-action="@Url.Action("Update","KeywordManagement")" data-target="#dvContent" data-target-Modal="#KeywordAddEditModal">Edit</span>
            </td>
        </tr>
}
    </tbody>
</table>
